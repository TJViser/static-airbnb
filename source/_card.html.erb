<div class="col-xs-12 col-sm-4">
  <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path flat.owner_picture%>);">
    <div class="card-category"><%= flat.city %></div>
    <div class="card-description">
      <h2><%= flat.name%></h2>
      <p><%= flat.summary %> </p>
    </div>
    <img class="card-user avatar avatar-large" src=<%= image_path flat.picture %> >
     <%= link_to "", "flats/#{owner}.html", class: "card-link" %>
  </div>
</div>
